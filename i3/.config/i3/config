for_window [class="Terminator" title="^((?!Terminator Preferences).)*$"] move scratchpad, move position 0 0, resize set 1366 768;
bindsym F1 [class="Terminator"] scratchpad show;


# bindsym $mod+w [instance="Mail"] scratchpad show; [instance="Mail"] move position center; [instance="Mail"] fullscreen enable
# for_window [instance="Mail"] move scratchpad
# for_window [instance="Mail"] border pixel 0

# Make the currently focused window a scratchpad
bindsym $mod+Shift+a move scratchpad

# Show the first scratchpad window
# bindsym $mod+a scratchpad show; move position center; fullscreen enable
bindsym $mod+a scratchpad show; move position 0 -20; resize set 2560 1460;

# mode "launch" 

# resize window (you can also use the mouse for that)
mode "resize" {
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Shift+m mode "digraphs"
mode "digraphs" {



        bindsym ww exec "xdotool type -delay 0 '1234 hello world'"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"


bar {
    # status_command i3status
    status_command i3blocks
        # mode dock # bar show/hide somehow doesn't work correctly without this
        # hidden_state show # bar show/hide somehow doesn't work correctly without this
        mode dock 
        hidden_state show 
        position top
        tray_output none
        tray_padding 0
        font pango:DejaVuSansMono Nerd Font Mono 14
        # bindsym button1 nop
        # bindsym button4 nop
        # bindsym button5 nop
        workspace_min_width 30

        colors {
            # background #222222
            statusline #aaaaaa
            separator #333333

            focused_workspace  #4c7899 #285577 #ffffff
            active_workspace   #333333 #5f676a #ffffff
            inactive_workspace #333333 #222222 #888888
            urgent_workspace   #2f343a #900000 #ffffff
        }
}


